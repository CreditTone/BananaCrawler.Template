{
    "thread": 1,
    "name": "taobaoqiyeinfo",
    "collection": "taobaoshoplist",
    "filter": {
        "type": "simple"
    },
    "seed_query": {
        "keep": true,
        "find": {
            "ref": {
                "isQiye": "1",
                "crawlCompany" : { "$exists" : false},
                "shopUrl" : { "$exists" : true},
                "shopClose" : { "$exists" : false},
                "imageSrc":{ "$exists" : false}
            },
            "keys": {
                "userid": 1,
                "shopUrl": 1,
                "_link": 1
            },
            "limit": 5000
        },
        "url": "https:{{shopUrl}}",
        "processor": "shopcard"
    },
    "queue": {
        "suport_priority": true,
        "delay":1000
    },
    "processors": [
        {
            "index": "shopcard",
            "page_context": {
                "xid":["_string","xid=([^\"]+)"]
            },
            "crawler_request": [
                {
                    "_condition":"{{existKey n \"xid\"}}",
                    "url": "http://crawler.jisucloud.cn/submit?tmpl=ali_licence&licence={{xid}}",
                    "processor": "py_company",
                    "priority": 2
                }
            ],
            "crawler_data":[
                {
                    "_condition":"{{isEmpty n \"xid\"}}",
                    "_update": {
                        "userid": "{{userid}}"
                    },
                    "shopClose":"true{{nil}}"
                }
            ]
        },
        {
            "index": "py_company",
            "page_context":{
                "licenseNumber":["tr:contains('营业执照注册号或统一信用代码') td"],
                "imageSrc": ["div.info-table img;src"]
            },
            "crawler_request": [
                {
                    "_condition":"{{existKey n \"licenseNumber\"}}",
                    "_update": {
                        "userid": "{{userid}}"
                    },
                    "licenseNumber": "tr:contains('营业执照注册号或统一信用代码') td",
                    "legalPerson":"tr:contains('法定代表人') td",
                    "companyName": ";html;企业名称</th>\\s*<td>([^<]+)",
                    "crawlCompany":"true{{nil}}"
                },
                {
                    "_condition":"{{existKey n \"imageSrc\"}}",
                    "_update": {
                        "userid": "{{userid}}"
                    },
                    "imageSrc":"{{imageSrc}}"
                }
            ]
        },
        {
            "index": "py_company2",
            "crawler_data": [
                {
                    "_update": {
                        "userid": "{{userid}}"
                    },
                    "shopId": ";html;shopId\":\"(\\d+)",
                    "sellerBail": ".tb-seller-bail",
                    "createShop": ";html;创店时间：([^<]+)",
                    "credite": ";html;卖家信用：(\\d+)",
                    "businessType": ";html;经营类型：([^<]+)",
                    "phone": ";html;联系电话：([^<]+)<",
                    "profile": ".archive-main:contains('公司简介') div[class='bd clearfix']",
                    "crawlCompany":"true{{nil}}"
                }
            ]
        }
    ]
}
{
    "thread": 5,
    "name": "tmallqiyeinfo",
    "collection": "taobaoshoplist",
    "filter": {
        "type": "simple"
    },
    "seed_query": {
        "keep": true,
        "find": {
            "ref": {
                "isTmall": "1",
                "crawlCompany" : { "$exists" : false},
                "shopUrl" : { "$exists" : true},
                "shopClose" : { "$exists" : false},
                "imageSrc":{ "$exists" : false}
            },
            "keys": {
                "userid": 1,
                "shopUrl": 1,
                "_link": 1
            },
            "limit": 5000
        },
        "url": "https:{{shopUrl}}",
        "processor": "shopcard"
    },
    "queue": {
        "suport_priority": true,
        "delay":1000
    },
    "processors": [
        {
            "index": "shopcard",
            "page_context": {
                "xid":["_string","xid=([^\"]+)"]
            },
            "crawler_request": [
                {
                    "_condition":"{{existKey n \"xid\"}}",
                    "url": "http://crawler.jisucloud.cn/submit?tmpl=ali_licence&licence={{xid}}",
                    "processor": "py_company",
                    "priority": 2
                }
            ],
            "crawler_data":[
                {
                    "_condition":"{{isEmpty n \"xid\"}}",
                    "_update": {
                        "userid": "{{userid}}"
                    },
                    "shopClose":"true{{nil}}"
                }
            ]
        },
        {
            "index": "py_company",
            "page_context":{
                "licenseNumber":["tr:contains('营业执照注册号或统一信用代码') td"]
            },
            "crawler_data": [
                {
                    "_condition":"{{existKey n \"licenseNumber\"}}",
                    "_update": {
                        "userid": "{{userid}}"
                    },
                    "licenseNumber": "tr:contains('营业执照注册号或统一信用代码') td",
                    "legalPerson":"tr:contains('法定代表人') td",
                    "companyName": ";html;企业名称</th>\\s*<td>([^<]+)",
                    "crawlCompany":"true{{nil}}"
                },
                {
                    "_condition":"{{containString n \"以上信息提取自经营者认证信息\"}}",
                    "_update": {
                        "userid": "{{userid}}"
                    },
                    "imageSrc":"div.info-table img;src"
                }
            ]
        }
    ],
    "download_processors":[
        {
            "index": "image",
            "files":[
                {
                    "filename":"{{userid}}_licenseImage",
                    "contentType":"image/jpg",
                    "aliases":"营业执照"
                }
            ]
        }
    ]
}